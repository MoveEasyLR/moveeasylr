<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="projet.odsig.com.moveasy" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name">

        <activity
            android:name="projet.odsig.com.moveasy.activities.SplashScreen"
            android:icon="@drawable/logo"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="projet.odsig.com.moveasy.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="projet.odsig.com.moveasy.activities.Help"
            android:label="@string/app_name"
            android:theme="@style/HelpTheme">
        </activity>

        <activity
            android:name="projet.odsig.com.moveasy.activities.Parameters"
            android:label="@string/app_name"
            android:theme="@style/ParametersTheme">
        </activity>

    </application>

</manifest>
